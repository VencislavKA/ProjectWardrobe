@model AddOutfitManualViewModel
@{
    ViewData["Title"] = "AddOutfit";
}
<div class="container">
    <div class="col">
        <form method="post" class="col text-center">
            <h4 class="font-weight-light text-left mt-4 mb-0">Select top wear:</h4>
            <hr class="mt-2 mb-5">
            <div class="form-check">
                <div class="row text-center text-lg-left">
                    @for (int i = 0; i < Model.Tops.Count; i++)
                    {
                        var item = Model.Tops.ElementAt(i);
                        if (i == 0)
                        {
                            <div class="col-lg-3 col-md-4 col-6">
                                <input class="form-check-input" type="radio" name="Top" id="@item.Id" value="@item.Id" checked>
                                <label class="form-check-label" for="@item.Id">
                                    <img class="img-fluid img-thumbnail" src="@item.ImageUrl" alt="Can't load this image">
                                </label>
                            </div>
                            continue;
                        }
                        <div class="col-lg-3 col-md-4 col-6">
                            <input class="form-check-input" type="radio" name="Top" id="@item.Id" value="@item.Id">
                            <label class="form-check-label" for="@item.Id">
                                <img class="img-fluid img-thumbnail" src="@item.ImageUrl" alt="Can't load this image">
                            </label>
                        </div>
                    }
                </div>
            </div>
            <h4 class="font-weight-light text-left mt-4 mb-0">Select middle wear:</h4>
            <hr class="mt-2 mb-5">
            <div class="form-check">
                <div class="row text-center text-lg-left">
                    @for (int i = 0; i < Model.Middles.Count; i++)
                    {
                        var item = Model.Middles.ElementAt(i);
                        if (i == 0)
                        {
                            <div class="col-lg-3 col-md-4 col-6">
                                <input class="form-check-input" type="radio" name="Middle" id="@item.Id" value="@item.Id" checked>
                                <label class="form-check-label" for="@item.Id">
                                    <img class="img-fluid img-thumbnail" src="@item.ImageUrl" alt="Can't load this image">
                                </label>
                            </div>
                            continue;
                        }
                        <div class="col-lg-3 col-md-4 col-6">
                            <input class="form-check-input" type="radio" name="Middle" id="@item.Id" value="@item.Id">
                            <label class="form-check-label" for="@item.Id">
                                <img class="img-fluid img-thumbnail" src="@item.ImageUrl" alt="Can't load this image">
                            </label>
                        </div>
                    }
                </div>
            </div>
            <h4 class="font-weight-light text-left mt-4 mb-0">Select bottom wear:</h4>
            <hr class="mt-2 mb-5">
            <div class="form-check">
                <div class="row text-center text-lg-left">
                    @for (int i = 0; i < Model.Bottoms.Count; i++)
                    {
                        var item = Model.Bottoms.ElementAt(i);
                        if (i == 0)
                        {
                            <div class="col-lg-3 col-md-4 col-6">
                                <input class="form-check-input" type="radio" name="Bottom" id="@item.Id" value="@item.Id" checked>
                                <label class="form-check-label" for="@item.Id">
                                    <img class="img-fluid img-thumbnail" src="@item.ImageUrl" alt="Can't load this image">
                                </label>
                            </div>
                            continue;
                        }
                        <div class="col-lg-3 col-md-4 col-6">
                            <input class="form-check-input" type="radio" name="Bottom" id="@item.Id" value="@item.Id">
                            <label class="form-check-label" for="@item.Id">
                                <img class="img-fluid img-thumbnail" src="@item.ImageUrl" alt="Can't load this image">
                            </label>
                        </div>
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-outline-success rounded-circle">
                <svg width="4em" height="4.5em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                </svg>
            </button>
        </form>
    </div>
</div>
<script>
    $('.carousel').carousel({
        interval: false,
    });
</script>
