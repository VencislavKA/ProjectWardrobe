@model WardrobeT.Web.ViewModels.Wardrobe.AddWearViewModel

@{
    ViewData["Title"] = "AddWear";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container mt-5">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-6">
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <div class="alert alert-danger">@error.ErrorMessage</div>
                }
            }
            <form class="justify-content-center" method="post" enctype="multipart/form-data">
                <div class="form-group text-center">
                    <div class="custom-file">
                        <input asp-for="WearImage" name="WearImage" onchange="loadFile(event)" class="custom-file-input">
                        <label asp-for="WearImage" class="custom-file-label" for="WearImage"></label>
                    </div>
                    <span asp-validation-for="WearImage" class="text-danger"></span>
                    <img class="mt-3 img-fluid img-thumbnail w-50" id="output" />
                </div>
                <div class="form-group">
                    <label asp-for="WearsType" for="wearType"></label>
                    <select class="form-control" id="wearType" name="WearType">
                        @foreach (var item in Model.WearsType)
                        {
                            <option value="@item.Id">@item.Type</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Colors" for="season"></label>
                    <select class="form-control" id="season" name="Color">
                        @foreach (var item in Model.Colors)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Seasons" for="season"></label>
                    <select class="form-control" id="season" name="Season">
                        @foreach (var item in Model.Seasons)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </form>
        </div>
        <div class="col">

        </div>
    </div>
</div>
<script>
    var image = document.getElementById('output').style.display = "none";
    var loadFile = function (event) {
        document.getElementById('output').style.display = "initial"
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>

