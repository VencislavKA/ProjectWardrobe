@model WardrobeT.Web.ViewModels.Wardrobe.AddWearModel

@{
    ViewData["Title"] = "AddWear";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container mt-5">
    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            <form class="justify-content-center">
                <div class="form-group text-center">
                    <p><input type="file" accept="image/*" name="image" id="file" onchange="loadFile(event)" style="display: none;"></p>
                    <p><label for="file" style="cursor: pointer;">Click here to upload image of the wear</label></p>
                    <p><img id="output" width="200" /></p>
                </div>
                <div class="form-group">
                    <label asp-for="WearsType"></label>
                    <select asp-for="WearsId" asp-items="Model.WearsType"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Seasons"></label>
                    <section asp-for="Seasons" class="form-control"></section>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
